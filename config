font-1 = "FontAwesome:pixelsize=11;1"
font-2 = siji:pixelsize=11;1
modules-left = i3 xwindow
modules-center = date wlan eth battery
modules-right = gpm-song xbacklight volume
tray-position = right
tray-padding = 3

[bar/others]
monitor = ${env:monitor}
background = ${bar/primary.background}
foreground = ${bar/primary.foreground}
